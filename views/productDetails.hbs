    <script>
        function change1() {
            document.getElementById("main").src = "{{product.images}}"
            document.getElementById("zoomImage").src = "{{product.images}}"

        }
        function change2() {
            document.getElementById("main").src = "{{product.Imageone}}"
            document.getElementById("zoomImage").src = "{{product.Imageone}}"

        }
        function change3() {
            document.getElementById("main").src = "{{product.Imagetwo}}"
            document.getElementById("zoomImage").src = "{{product.Imagetwo}}"

        }
        function change4() {
            document.getElementById("main").src = "{{product.Imagethree}}"
            document.getElementById("zoomImage").src = "{{product.Imagethree}}"

        }



        document.addEventListener('DOMContentLoaded', () => {
            const quantityElement = document.getElementById('quantity');
            const buttonAdd = document.getElementById('buttonadd');
            const buttonSub = document.getElementById('buttonsub');

            function ButtonSub() {
                if (quantityElement.value <= 1) {
                    buttonSub.style.display = "none";
                } else {
                    buttonSub.style.display = "block";
                }
            }
            

            buttonAdd.addEventListener('click', () => {
                quantityElement.value = parseInt(quantityElement.value, 10) + 1;
                ButtonSub();
            });

            buttonSub.addEventListener('click', () => {
                quantityElement.value = Math.max(1, parseInt(quantityElement.value, 10) - 1)
                ButtonSub();
            });






            //image zoom//
            var x = $('#main').zoom(3);
            x.setZoom(3);


        });


    </script>

