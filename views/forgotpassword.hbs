  <body>

    <section class="vh-100" style="background-color: hsl(220, 75%, 98%);">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
              <div class="card-body p-5 text-center">

                <h2 class="mb-5" id="forgot-head">Find Your Account...</h2>
                <p style="font-weight: bold;">Please Enter Your Email</p>

                <form
                  action="/forgotpassword"
                  method="POST"
                  onsubmit="return forgotForm()"
                  name="forgotform"
                >
                  <div class="form-floating mb-3 mt-3">
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      id="email"
                      placeholder="Enter email"
                      name="email" value=""
                    />
                    <label for="email">Email</label>
                    <p id="forgotemailError" class="text-danger"></p>
                  </div>

                  <button
                    type="submit"
                    value="Send"
                    class="btn btn-dark"
                  >Submit</button>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <script src="/js/formValidation.js"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
