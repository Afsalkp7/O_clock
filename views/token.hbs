  <body>
    <div class="container shadow-lg P-5 text-dark" >
      <div class="row">
        <div class="col-12">
          <form action="/token-password" method="POST">
            <input type="text" hidden name="id" value="{{_id}}">
            <label for="token">Enter Access Code</label><br />
            <input type="text" id="token" name="token" /><br />
            <p id="msg1" class="text-danger"></p>
            <input type="submit" value="Submit"/>
          </form>

        </div>
      </div>
    </div>


       
  {{#if tokenalert}}
  <script>
        document.getElementById("msg1").innerHTML="Access Code is incorrect"
  </script>
  {{/if}}

