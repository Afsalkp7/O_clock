        <div class="col-lg-7 text-center py-5">
          <h1 id="logh1">Sign Up</h1>

          <form action="/user_registration" method="POST" onsubmit="return validateForm()">
            <div class="form-row">
              <div class="offset-1 col-lg-10 pt-3">
                <input type="text" class="form-control" name="name" placeholder="User Name" id="name" />
