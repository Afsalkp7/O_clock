        {{#if empty}}
        <div class="container text-center" style="margin-top: 100px;">
            <div class="row ">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12 text-center">
                    <img src="/images/emptyWish.gif" alt="" class="img-fluid" width="35%">
                    <h4 class="text-danger text-center">Your Wishlist is Empty! </h4>
                    {{!-- <p class="" style="color: skyblue;">seems like you don't have wishes here<br><span>Make a
                            Wish</span></p> --}}
                    <a href="/shop" class="btn btn-outline-dark">Start Shopping</a>


                </div>
            </div>

        </div>
        {{else}}
        <section style="margin-top:100px" class="bg-light">
            <div class="container py-5 ">
                <div class="row justify-content-center mb-3">
                    <div class="col-md-12 col-xl-12 col-12 col-sm-12 col-lg-12 col-xxl-12">
                        {{#each wishProducts}}
                        {{#each productContent}}
                        <div class="card shadow-0 border rounded-3">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3 mb-4 mb-lg-0 img-wish">
                                        <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                           <a href="/shop/{{this._id}}"><img src={{this.images}} class="w-50 img-fluid text-center " /></a>
                                            <a href="">
                                                <div class="hover-overlay">
                                                    <div class="mask"
                                                        style="background-color: rgba(253, 253, 253, 0.15);">
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-6 col-md-4 col-lg-6 col-xl-6 wish-text">
                                        <h5 class="text-dark" style="font-weight: 700;">{{this.name}}</h5>

                                        <p class="text-truncate mb-4 mb-md-0">{{this.brand}}
                                        <p class="text-danger mb-4 mb-md-0">Rs:{{this.price}}/-

                                        </p>
                                    </div>
                                    <div class="col-sm-12 col-12 col-md-4 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                        <div class="d-flex flex-column mt-4">
                                            
                                            <button class="deleteWishproduct btn btn-dark btn-sm "
                                                data-user-id="{{this._id}}" type="button">Delete</button>
                                            <button class="btn btn-outline-dark btn-sm mt-2 wishToCart" type="button" id="addCart{{this._id}}"  data-product-id="{{this._id}}">
                                                Add to Cart
                                            </button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <script>
                            document.addEventListener('DOMContentLoaded', () => {
                                const addCartButton = document.getElementById('addCart{{this._id}}');
                                const countStock = {{ this.countStock }};

                                if (countStock === 0) {
                                    addCartButton.style.display = 'none';
                                }
                            });
                        </script>





                        {{/each}}
                        {{/each}}
                    </div>
                </div>

            </div>

        </section>



        {{!-- modal --}}
        <div class="modal fade" id="deleteWish" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel"></h5>
                        <a href="/wish" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></a>
                        {{!-- <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button> --}}
                    </div>
                    <div class="modal-body" id="wishDelete">

                    </div>
                    <div class="modal-footer">
                        <a href="/wish"><button type="button" class="btn btn-secondary">Close</button></a>
                    </div>
                </div>
            </div>
        </div>



        <section class="bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-12 ">
                        <a href="/shop" class="btn btn-dark text-light" data-bs-toggle="tooltip" data-bs-placement="top" title="Continue Shopping"><i class="fa-solid fa-backward"></i></a>
                    </div>
                </div>
            </div>

          

            {{/if}}
        </section>

