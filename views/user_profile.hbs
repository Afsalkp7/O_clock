    <section>
        <div class="container" id="profile_container">
            <h3 class="text-center p-5">PROFILE INFORMATION</h3>
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 ">
                    <div class="container  shadow-lg P-5" id="admin_profile">
                        <div class="col-md-12 text-center">
                            <img src="/images/profile.png" alt="">

                            <h4>{{user.name}}</h4>

                            <button type="button" class="btn-outline-dark">My Orders</button>
                            <button type="button" class="btn-outline-dark">My Wishlist</button>

                            <div class="container shadow-lg P-5  mt-5 text-center">
                                <a href="/delete/{{user._id}}"><button type="button"
                                        class="btn btn-dark">Delete</button></a>
                                <a href="/user_logout"><button type="button" class="btn btn-dark">LogOut</button></a>

                            </div>

                        </div>
                    </div>

                </div>
                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 ">
                    <div class="container shadow-lg P-5"
                        style=" background:linear-gradient(rgb(176, 176, 237),lightblue)">
                        <form action="" method="">
                            <div class="mb-4">
                                <label for="InputName">User Name</label>
                                <input type="text" class="form-control" id="InputName" placeholder="Enter Name"
                                    name="name" value="{{user.name}}" readonly>
                            </div>
                            <div class="mb-4">
                                <label for="InputName">Email Address</label>
                                <input type="email" class="form-control" id="InputEmail" placeholder="Enter Email"
                                    name="email" value="{{user.email}}" readonly>
                            </div>
                            <div class="mb-4">
                                <label for="InputName">Phone</label>
                                <input type="number" class="form-control" id="Inputphone"
                                    placeholder="Enter Phone number" name="phone" value="{{user.phone}}" readonly>
                            </div>
                            <div class="mb-4">
                                <button type="button" class="btn btn-dark text-light">
                                    Change Password
                                </button>
                                <button type="button" class="btn btn-dark text-light" data-bs-toggle="modal"
                                    data-bs-target="#exampleModal">
                                    Edit
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </section>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 style="text-align: center; font-family: cursive; font-weight: bold;">Edit Form</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editForm">
                        <div class="mb-4">
                            <input type="text" class="form-control" id="InputName1" placeholder="Enter Name" name="name"
                                value="{{user.name}}">
                        </div>
                        <div class="mb-4">
                            <input type="email" class="form-control" id="InputEmail1" placeholder="Enter Email"
                                name="email" value="{{user.email}}">
                        </div>
                        <div class="mb-4">
                            <input type="number" class="form-control" id="Inputphone1" placeholder="Enter Phone number"
                                name="phone" value="{{user.phone}}">
                        </div>
                        <button type="button" id="userButton" onclick="func()" class="btn btn-outline-dark"
                            data-bs-toggle="modal" data-bs-dismiss="modal">Save Changes</button>
                    </form>

                </div>
            </div>

        </div>
    </div>
